{
  "compilerOptions": {
      "declaration": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "module": "commonjs",
      "lib": [
          "es2016",
          "esnext.asynciterable"
      ],
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./",
      "sourceMap": true,
      "target": "es2016",
      "pretty": true,
      "noImplicitAny": true,
      "strict": true,
      "esModuleInterop": true,
      "suppressImplicitAnyIndexErrors": true,
      "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
